            android:text="@string/txtBank01Header"
            android:textSize="@dimen/header"
            />

        <TextView
            android:id="@+id/txtBank02"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBank02Text"
            android:textSize="@dimen/text"
            />

        <TextView
            android:id="@+id/txtBank03"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBank03Text"
            android:textSize="@dimen/text"
            />

    </LinearLayout>

</ScrollView>
