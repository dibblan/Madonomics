<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="nu.douhan.madonomics.SkuldkvotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px" >
            <requestFocus />
        </LinearLayout>

        <TextView
            android:id="@+id/txtSkuldkvotIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/txtSkuldkvotIntroText" />

        <TextView
            android:id="@+id/txtSkuldkvotIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtSkuldkvotIncomeText" />

        <EditText
            android:id="@+id/edtSkuldkvotIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/txtSkuldkvotTotalDebt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtSkuldkvotTotalDebtText" />

        <EditText
            android:id="@+id/edtSkuldkvotTotalDebt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/btnSkuldkvotSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCalculate"
            android:layout_marginTop="15dp"
            android:background="@color/btnBG"
            android:textColor="@color/btnText" />

        <TextView
            android:id="@+id/txtSkuldkvotResultPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/txtSkuldkvotResultKvot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/txtSkuldkvotExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/txtSkuldkvotExplanation02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text" />

    </LinearLayout>
</ScrollView>
